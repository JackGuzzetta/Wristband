<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wristband.yt_b_4.wristbandclient.Add_User">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of invitee:"
        android:textColor="@color/bright"
        android:textSize="35px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintVertical_bias="0.016"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="203dp"
        android:layout_height="43dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/invitee"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Optional): User number:"
        android:textColor="@color/bright"
        android:textSize="35px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintVertical_bias="0.197"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="158dp"
        android:layout_height="37dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="94dp"
        android:id="@+id/number" />

    <Button
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_marginLeft="109dp"
        android:text="Invite to party"
        android:clickable="true"
        android:onClick="buttonClickParty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="256dp"
        android:layout_marginStart="109dp" />

    <Button
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_marginLeft="109dp"
        android:text="Add to blacklist"
        android:clickable="true"
        android:onClick="buttonClickBlacklist"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="170dp"
        android:layout_marginStart="109dp" />

</android.support.constraint.ConstraintLayout>
