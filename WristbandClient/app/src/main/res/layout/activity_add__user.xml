<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.wristband.yt_b_4.wristbandclient.Add_User"
    android:background="@color/cardview_shadow_start_color">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/name"
        android:layout_above="@+id/last">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of guest:"
        android:textColor="@color/bright"
        android:textSize="45px" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/userid"
        android:layout_above="@+id/last">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Optional) User ID:"
        android:textColor="@color/bright"
        android:textSize="45px" />

        <EditText
            android:id="@+id/id"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:editable="false"
            android:layout_marginLeft="10dp" />
</LinearLayout>

    <Button
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_marginLeft="109dp"
        android:text="Invite to party"
        android:clickable="true"
        android:onClick="buttonClickParty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="162dp"
        android:layout_marginStart="109dp" />


    <Button
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Back"
        android:clickable="true"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_marginLeft="120dp"
        android:text="Done"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="86dp"
        android:layout_marginStart="109dp" />

</android.support.constraint.ConstraintLayout>
