<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.wristband.yt_b_4.wristbandclient.CoHost"
    android:background="@color/cardview_shadow_start_color">


<TextView


    android:text="Add CoHosts"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    android:textColor="@color/bright"
    android:textSize="60px"
    android:layout_width="194dp"
    android:layout_height="64dp"
    android:layout_marginLeft="117dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:src="@android:drawable/ic_menu_search"
    android:layout_marginBottom="360dp"
    android:layout_marginStart="109dp"
    app:layout_constraintVertical_bias="0.183" />
<View
    android:layout_width="368dp"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.6"
    app:layout_constraintVertical_bias="0.139"
    android:layout_marginRight="8dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Current Amount of CoHosts:"
    android:textColor="@color/bright"
    android:textSize="45px"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintVertical_bias="0.0"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="150dp"
    android:layout_marginStart="8dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Max invites per CoHosts:"
    android:textColor="@color/bright"
    android:textSize="45px"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.027"
    app:layout_constraintVertical_bias="0.0"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="210dp"
    android:layout_marginStart="8dp" />

<EditText
    android:layout_width="88dp"
    android:layout_height="43dp"
    android:layout_marginRight="10dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="200dp"
    android:id="@+id/maxinvites"
    android:layout_marginEnd="10dp" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Invite CoHost by Username:"
    android:textColor="@color/bright"
    android:textSize="45px"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.027"
    app:layout_constraintVertical_bias="0.0"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="270dp"
    android:layout_marginStart="8dp" />
<EditText
    android:layout_width="88dp"
    android:layout_height="43dp"
    android:layout_marginRight="10dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="270dp"
    android:id="@+id/username"
    android:layout_marginEnd="10dp" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Invite CoHost by UserNumber:"
    android:textColor="@color/bright"
    android:textSize="45px"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.027"
    app:layout_constraintVertical_bias="0.0"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="330dp"
    android:layout_marginStart="8dp" />
<EditText
    android:layout_width="88dp"
    android:layout_height="43dp"
    android:layout_marginRight="10dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="330dp"
    android:id="@+id/Usernumber"
    android:layout_marginEnd="10dp" />

<Button
    android:id="@+id/save"
    android:layout_width="167dp"
    android:layout_height="50dp"
    android:layout_marginLeft="109dp"
    android:text="Save"
    android:clickable="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="72dp"
    android:layout_marginStart="109dp"
    />

    <Button
        android:id="@+id/next"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_marginLeft="109dp"
        android:text="Next"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="109dp"
        android:onClick="Add_Users"
        />


