<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loginscreen">
    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="106dp"

        android:layout_below="@+id/txtstatus"
        android:layout_alignLeft="@+id/register_button"
        android:layout_alignStart="@+id/register_button" />

    <TextView
        android:id="@+id/txtstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Status" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Create profile"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/fb_login_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="77dp"
        android:text="Login"
        android:layout_alignTop="@+id/register_button"
        android:layout_alignRight="@+id/register_button"
        android:layout_alignEnd="@+id/register_button"
        android:layout_alignLeft="@+id/register_button"
        android:layout_alignStart="@+id/register_button" />

</RelativeLayout>