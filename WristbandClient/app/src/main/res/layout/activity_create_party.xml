<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wristband.yt_b_4.wristbandclient.Create_Party">


    <ImageButton
        android:id="@+id/pict"
        android:layout_width="150dp"
        android:layout_height="149dp"
        android:layout_marginLeft="109dp"
        android:text="Add Party Picture"
        android:clickable="true"
        android:onClick="buttonClickParty"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@android:drawable/ic_menu_search"
        android:layout_marginStart="109dp"
        tools:layout_editor_absoluteY="0dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Party Picture"
        android:textColor="@color/bright"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintVertical_bias="0.016"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name your Event:"
        android:textColor="@color/bright"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintVertical_bias="0.016"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="175dp"
        android:layout_marginStart="2dp" />

    <EditText
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"
        android:id="@+id/eventName"
        android:layout_marginEnd="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Date:"
        android:textColor="@color/bright"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintVertical_bias="0.197"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="4dp" />

    <EditText
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="230dp"
        android:id="@+id/day"
        android:layout_marginEnd="28dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Time:"
        android:textColor="@color/bright"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintVertical_bias="0.197"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="245dp"
        android:layout_marginStart="4dp" />

    <EditText
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="285dp"
        android:id="@+id/tyme"

        android:layout_marginEnd="28dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Location:"
        android:textColor="@color/bright"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="310dp"
        android:layout_marginStart="4dp" />

    <EditText
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="340dp"
        android:id="@+id/locat"

        android:layout_marginEnd="28dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Party public"
        android:textColor="@color/bright"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintVertical_bias="0.034"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="385dp"
        android:layout_marginStart="100dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="180dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="420dp"
        android:id="@+id/swittch"
        android:layout_marginEnd="180dp" />


    <Button
        android:id="@+id/create"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:text="Create Party"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        />
    <Button
        android:id="@+id/next"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_marginLeft="190dp"
        android:text="Next"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="190dp"
        />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="260dp"
        android:text="Back"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="460dp"
        android:layout_marginStart="260dp"
        />


</android.support.constraint.ConstraintLayout>
